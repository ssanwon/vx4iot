<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Register_Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_Register"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/blue"
            android:elevation="4dp"
            app:navigationIcon="@drawable/ic_back"
            app:title="Đăng ký"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/txt_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBar_Register"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="Đăng ký"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/account_Register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txt_Register"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/ic_person"
        android:hint="Tài khoản"
        android:padding="10dp" />

    <EditText
        android:id="@+id/password_Register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/account_Register"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/ic_password"
        android:hint="Mật khẩu"
        android:inputType="numberPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/password_Register_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/password_Register"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/ic_password"
        android:hint="Nhập lại mật khẩu"
        android:inputType="numberPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/bt_Register"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/password_Register_1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/blue"
        android:padding="10dp"
        android:text="Đăng ký"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>